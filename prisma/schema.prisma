datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  fullName  String
  role      Role
  bookings  Booking[]
  classes   ClassSchedule[]
}

model ClassSchedule {
  id        Int      @id @default(autoincrement())
  date      DateTime
  time      String
  duration  Int
  trainer   User     @relation(fields: [trainerId], references: [id])
  trainerId Int
  bookings  Booking[]
}

model Booking {
  id               Int            @id @default(autoincrement())
  classSchedule    ClassSchedule  @relation(fields: [classScheduleId], references: [id])
  classScheduleId  Int
  trainee          User           @relation(fields: [traineeId], references: [id])
  traineeId        Int
}

enum Role {
  ADMIN
  TRAINER
  TRAINEE
}
